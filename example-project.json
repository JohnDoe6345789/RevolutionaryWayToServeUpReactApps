        "name": "NotificationService",
        "description": "Service for sending notifications including email, SMS, push notifications, and in-app alerts",
        "module": "business/services",
        "extends": "BaseService",
        "dataClass": "NotificationData",
        "factory": "NotificationServiceFactory",
        "config": {
          "providers": ["email", "sms", "push", "inapp"],
          "defaultProvider": "email",
          "enableBatching": true,
          "maxBatchSize": 100,
          "retryAttempts": 3
        },
        "dependencies": ["BaseService", "NotificationData"],
        "initializeLogic": "// Initialize notification service with providers\n    this.providers = new Map();\n    for (const provider of this.config.providers) {\n      this.providers.set(provider, await this.loadProvider(provider));\n    }",
