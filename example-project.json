        "module": "business/services",
        "extends": "BaseService",
        "dataClass": "OrderData",
        "factory": "OrderServiceFactory",
        "config": {
          "maxOrderValue": 10000,
          "enablePaymentProcessing": true,
          "taxRate": 0.08,
          "enableNotifications": true,
          "orderTimeout": 300
        },
        "dependencies": ["BaseService", "OrderData"],
        "initializeLogic": "// Initialize order service with payment gateway\n    this.paymentGateway = await this.connectPaymentGateway();\n    this.orderQueue = new Queue();\n    this.validator = new OrderValidator();",
        "executeLogic": "// Process order with validation and payment\n    const order = await this.validateOrder(args[0]);\n    if (order.valid) {\n      const payment = await this.processPayment(order);\n      return await this.fulfillOrder(order, payment);\n    }\n    throw new Error('Order validation failed');"
      },
